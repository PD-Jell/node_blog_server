{
  "name": "typescript",
  "version": "1.0.0",
  "description": "TypeScript Study Project",
  "main": "index.js",
  "author": "Jell",
  "license": "MIT",
  "scripts": {
    "clear": "rimraf dist node_modules",
    "start": "yarn run build && yarn run watch",
    "serve": "cross-env NODE_ENV=production node dist/server/index.js",
    "build": "yarn run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"cross-env NODE_ENV=production nodemon dist/server/index.js\"",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint -- fic -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@types/lodash": "^4.14.109",
    "adm-zip": "^0.4.7",
    "archiver": "^2.1.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "ejs": "^2.5.7",
    "express": "^4.15.5",
    "lodash": "^4.17.10",
    "lokijs": "^1.5.0",
    "multer": "^1.3.0",
    "mysql": "^2.15.0",
    "promise-mysql": "^3.1.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/archiver": "^2.0.1",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.37",
    "@types/lokijs": "^1.2.30",
    "@types/multer": "^1.3.3",
    "@types/mysql": "^2.15.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.5",
    "nodemon": "^1.12.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
